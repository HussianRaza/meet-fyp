{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "api-server",
          "sidecar": true,
          "args": []
        },
        {
          "name": "python3",
          "cmd": "python3",
          "args": true
        },
        {
          "name": "python",
          "cmd": "python",
          "args": true
        }
      ]
    }
  ]
}
